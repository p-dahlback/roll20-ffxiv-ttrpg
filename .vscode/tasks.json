{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sheetImports",
            "type": "shell",
            "command": "./Scripts/buildimports.sh",
            "args": [
                "workers",
                "Source/workers"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "buildMods",
            "type": "shell",
            "command": "cp",
            "args": [
                "${workspaceFolder}/Source/mods/*.js",
                "${workspaceFolder}/Mods/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "buildSheet",
            "type": "shell",
            "command": "./Scripts/gensheet.sh",
            "args": [
                "Source/base.html",
                ".build/workers"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": ["sheetImports"]
        },
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["buildSheet", "buildMods"]
        }
    ]
}